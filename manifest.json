{
    "manifest_version": 2,
    "name": "Crunchyroll Language Filter",
    "version": "1.0",
    "description": "Filtert Crunchyroll-Serien nach Audiosprache",
    "icons": {
      "48": "icons/icon48.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.crunchyroll.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png"
      }
    }
  }
  

  
  